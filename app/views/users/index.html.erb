<h1>Usuarios</h1>
<%flash.each do |name , msg| %>
  <div class="alert alert-<%= name %>">
    <%= msg %>
  </div>
<% end %>
<%= link_to 'Agregar Usuario', new_user_path, :class => "btn btn-primary" %>
<Table class="table">
  <tr>
    <thead class="thead-dark">
    <th> Nombre  </th>
    <th> Rol </th>
		<th> Facultad </th>
		<th> Estado </th>
    <th> Opciones </th>
  </thead>
  </tr>

	<% @users.each do |t| %>
  <tr>
  <td><%= t.nombre %> <%= t.apellidopa %> <%=t.apellidoma%></td>
